@model Schoolar.Web.Data.Entities.Coordinator
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Coordinator</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(c => c.User.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(c => c.User.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(c => c.User.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(c => c.User.LastName)
        </dd>

        <dd>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" width="100" height="100" />
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-success btn-group-sm">
            <span class="glyphicon glyphicon-trash"></span>
        </button>
        <a asp-action="Index" class="btn btn-danger btn-group-sm"><span class="glyphicon glyphicon-remove"></span></a>
    </form>
</div>

