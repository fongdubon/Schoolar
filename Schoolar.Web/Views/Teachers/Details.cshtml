@model Schoolar.Web.Data.Entities.Teacher
    ViewData["Title"] = "Details";
}

<h2>Detail Teacher</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(c => c.User.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(c => c.User.LastName)
        </dd>
        <dd>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" width="100" height="100" />
            }
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary btn-group-sm" asp-route-id="@Model.Id"><span class="glyphicon glyphicon-pencil"></span></a>
    <a asp-action="Index" class="btn btn-danger btn-group-sm"><span class="glyphicon glyphicon-remove"></span></a>
</div>


